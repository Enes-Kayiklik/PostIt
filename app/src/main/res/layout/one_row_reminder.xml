<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:padding="8dp"
    android:background="@drawable/note_detail_background"
    android:elevation="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReminderTitle"
            style="@style/OneRowNoteTitleTextStyle"
            android:layout_width="wrap_content" />

        <ImageView
            android:id="@+id/icIsReminderActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:rotation="30"
            android:src="@drawable/ic_reminder"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvReminderDetail"
        style="@style/OneRowNoteSubTextStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="7" />
</LinearLayout>