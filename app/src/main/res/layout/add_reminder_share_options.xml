<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:background="@color/colorWhiteText"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addBirthdaySendMail"
            style="@style/ShareImageViewStyle"
            android:layout_marginStart="0dp"
            android:src="@drawable/ic_email" />

        <ImageView
            android:id="@+id/addBirthdaySendSms"
            style="@style/ShareImageViewStyle"
            android:src="@drawable/ic_chat" />

        <ImageView
            android:id="@+id/addBirthdayShare"
            style="@style/ShareImageViewStyle"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/addBirthdayCall"
            style="@style/ShareImageViewStyle"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_telephone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/ShareImageSubTitleStyle"
            android:layout_marginStart="0dp"
            android:text="Mail" />

        <TextView
            style="@style/ShareImageSubTitleStyle"
            android:text="Sms" />

        <TextView
            style="@style/ShareImageSubTitleStyle"
            android:text="Share" />

        <TextView
            style="@style/ShareImageSubTitleStyle"
            android:layout_marginEnd="0dp"
            android:text="Call" />
    </LinearLayout>
</LinearLayout>